<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table class="table table-striped">
  <thead >
    <tr>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.category %></td>
        <td class="success"><%= link_to 'PLAY', game %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
